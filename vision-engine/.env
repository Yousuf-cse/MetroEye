# MetroEye Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# ElevenLabs Configuration (Optional)
# ============================================
# Get your API key from: https://elevenlabs.io/app/settings/api-keys
# Free tier: 10,000 characters/month
ELEVENLABS_API_KEY=ur env

# ============================================
# PA System Configuration
# ============================================
# Set to 'false' to use free gTTS instead of ElevenLabs
USE_ELEVENLABS=true

# Audio cache directory (where pre-recorded files are stored)
AUDIO_CACHE_DIR=audio_cache

# ============================================
# Alert System Configuration
# ============================================
# Ollama API endpoint (for alert descriptions)
OLLAMA_URL=http://localhost:11434

# Backend API endpoint (where alerts are sent)
BACKEND_URL=http://localhost:8000/api/alerts

# Alert cooldown (seconds between alerts for same person)
ALERT_COOLDOWN=10.0

# ============================================
# Camera Configuration
# ============================================
# Default camera ID
CAMERA_ID=platform_3_camA

# Video source (file path or RTSP stream)
VIDEO_SOURCE=sample-station.webm

# ============================================
# Model Configuration
# ============================================
# YOLO model path
MODEL_PATH=yolo26n-pose.pt

# Detection confidence threshold
CONF_THRESH=0.3

# IOU threshold
IOU_THRESH=0.5
